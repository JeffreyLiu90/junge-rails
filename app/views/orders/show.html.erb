<section class="orders-show">

  <header class="page-header">
    <h1>Order ID:  <%= @order.id %></h1>
    <h4>Order email:  <%= @order.email %></h4>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! Please see below your summary:</h4>



    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th> Quantity</th>
          <th>Total</th>

        </tr>
      </thead>
      <tbody>
   

        <%  @line_item.each do |item| %>
          <%= render 'lineitem', product: item.product, quantity: item.quantity.to_i %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
            <%= "#{"$"}#{@order.total_cents / 100.0}" %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>